<p id="notice"><%= notice %></p>

<h2>Your Cart</h2>
<table>
<% @cart.line_items.each do |line_item| %> <tr>
<td class="quantity"><%= line_item.quantity %></td>
<td><%= line_item.store.name %></td>
<td class="price"><%= number_to_currency(line_item.total_price) %></td>
</tr>
<% end %> <tfoot>
<tr>
<th colspan="2">Total:</th>
<td class="price"><%= number_to_currency(@cart.total_price) %></td>
      </tr>
    </tfoot>
</table>

<div class="btn-container">
<button><%= link_to "Continue Shopping", gallery_index_path,class:"submit_btn" %>
</button>
<%= button_to 'Empty cart', @cart,class:"submit_btn", method: :delete, data: { confirm: 'Are you sure?' } %>
<button><%= link_to "Checkout", gallery_checkout_path,class:"submit_btn" %>
</button>
</div>